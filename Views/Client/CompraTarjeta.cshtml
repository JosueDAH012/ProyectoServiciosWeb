
@{
    ViewBag.Title = "CompraTarjeta";
}

<div class="bg-image" style=" background-image: url('https://images.pexels.com/photos/46148/aircraft-jet-landing-cloud-46148.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260');height: 100vh; ">
    <div class="container">
        <div class="row">
            <div class="col-sm-10 col-md-10 col-lg-8 mx-auto">
                <div class="card card-signin my-5">
                    <div class="card-body">
                        <h1 class="card-title text-center">Tarjeta Debito/Credito</h1>
                        <form>
                            <div class="form-group row">
                                <label for="username" class="col-sm-5 col-form-label">Nombre del titular</label>
                                <input id="TotalBoletos" placeholder="Nombre del titular">
                            </div>
                            <div class="form-group row">
                                <label for="username" class="col-sm-5 col-form-label">Seleccione el tipo de tarjeta</label>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="Visa">
                                    <label class="form-check-label" for="Visa">
                                        Visa
                                    </label>
                                </div><div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="Master">
                                    <label class="form-check-label" for="Master">
                                        Master Card
                                    </label>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="username" class="col-sm-5 col-form-label">Numero de tarjeta</label>
                                <input type="number" id="TotalBoletos" placeholder="Numero de tarjeta">
                            </div>
                            <div class="form-group row">
                                <label for="username" class="col-sm-5 col-form-label">Codigo de seguridad</label>
                                <input type="password" id="TotalBoletos" placeholder="CVC">
                            </div>
                            <div class="form-group row">
                                <label for="username" class="col-sm-5 col-form-label">Fecha de vencimiento</label>
                                <input type="date" id="TotalBoletos" placeholder="Fecha de caducidad">
                            </div>
                            <div class="form-group row">
                                <label for="username" class="col-sm-5 col-form-label">¿Desea guardar la tarjeta?</label>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="Yes">
                                    <label class="form-check-label" for="Yes">
                                        Si
                                    </label>
                                </div><div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="No">
                                    <label class="form-check-label" for="No">
                                        No
                                    </label>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-10">
                                    <button type="submit" class="btn btn-primary">Pagar</button>
                                    <button type="submit" class="btn btn-primary">Atras</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

