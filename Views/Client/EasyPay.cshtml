
@{
    ViewBag.Title = "EasyPay";
}

<div class="bg-image" style=" background-image: url('https://images.pexels.com/photos/46148/aircraft-jet-landing-cloud-46148.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260');height: 100vh; ">
    <div class="container">
        <div class="row">
            <div class="col-sm-10 col-md-10 col-lg-8 mx-auto">
                <div class="card card-signin my-5">
                    <div class="card-body">
                        <h1 class="card-title text-center">Easy Pay</h1>
                        <form>
                            <div class="form-group row">
                                <label for="username" class="col-sm-5 col-form-label">Numero de cuenta</label>
                                <input id="TotalBoletos" placeholder="Numero de cuenta">
                            </div>

                            <div class="form-group row">
                                <label for="username" class="col-sm-5 col-form-label">Codigo de seguridad</label>
                                <input type="password" id="TotalBoletos" placeholder="Codigo de seguridad">
                            </div>
                            <div class="form-group row">
                                <label for="username" class="col-sm-5 col-form-label">Contraseña</label>
                                <input type="password" id="TotalBoletos" placeholder="Contraseña">
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-10">
                                    <button type="submit" class="btn btn-primary">Pagar</button>
                                    <button type="submit" class="btn btn-primary">Atras</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

