
@{
    ViewBag.Title = "ConsultaErrores";
}

<div class="bg-image" style=" background-image: url('https://images.pexels.com/photos/46148/aircraft-jet-landing-cloud-46148.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260');height: 100vh; ">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h1 class="card-title text-center">Errores</h1>
                    <form class="form-signin">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Fecha y Hora</th>
                                    <th scope="col">Numero de error</th>
                                    <th scope="col">Mensaje de error</th>
                                </tr>
                            </thead>
                        </table>
                        <div class="form-group row">
                            <div class="col-sm-10">
                                <a class="btn btn-primary" href="@Url.Action("PaginaPrincipal", "Admin")">Regresar</a>
                                <hr class="my-4">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

