
@{
    ViewData["Title"] = "PuertasAeropuerto";
}

<div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
            <div class="card-body">
                <h1 class="card-title text-center">Puertas del Aeropuerto</h1>
                <form class="form-signin">
                    <table class="table">
                        <thead>
                        <tr>
                            <th scope="col">Codigo de puerta</th>
                            <th scope="col">Numero de puerta</th>
                            <th scope="col">Detalle</th>
                        </tr>
                        </thead>
                    </table>

                    <div class="col-lg-offset-2 col-lg-2 col-md-offset-2 col-md-2 col-sm-10 col-xs-10">
                        <button type="button" value="Aceptar" name="btnAceptar" id="btnAceptar" tabindex="9">Aceptar</button>
                        <button type="button" value="Borrar" name="btnBorrar" id="btnCancelar" tabindex="9">Borrar</button>
                        <button type="button" value="Borrar" name="btnBorrar" id="btnCancelar" tabindex="9">Cerrar</button>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


