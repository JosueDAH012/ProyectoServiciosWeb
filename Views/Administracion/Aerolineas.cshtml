
@{
    ViewData["Title"] = "Aerolineas";
}

<div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
            <div class="card-body">
                <h1 class="card-title text-center">Aerolineas</h1>
                <form class="form-signin">
                    <table class="table">
                        <thead>
                        <tr>
                            <th scope="col">Codigo de Aerolinea</th>
                            <th scope="col">Nombre de la agencia</th>
                            <th scope="col">Emblema de la Aerolinea</th>
                        </tr>
                        </thead>
                    </table>

                    <div class="col-lg-offset-2 col-lg-2 col-md-offset-2 col-md-2 col-sm-10 col-xs-10">
                        <button type="button" value="Aceptar" name="btnAceptar" id="btnAceptar" tabindex="9">Aceptar</button>
                        <button type="button" value="Borrar" name="btnBorrar" id="btnCancelar" tabindex="9">Borrar</button>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-10">
                            
                            <button class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Index">Cancelar</button>
                            <hr class="my-4">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


