@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("~/Views/Shared/_HeaderLoginClient.cshtml")

@using (Html.BeginForm("iniciarSesion", "vuelos", FormMethod.Post))
{
    <div class="containerNew">
        <label for="uname"><b>USERNAME</b></label>
        <input type="text" placeholder="Enter Username" name="uname" required>

        <label for="psw"><b>PASSWORD</b></label>
        <input type="password" placeholder="Enter Password" name="psw" required>

        <button class="button btn" type="submit">Login</button>
        <label>
            <input type="checkbox" checked="checked" name="remember"> Remember me
        </label>
        <div>
            <span class="psw">Forgot <a href="@Url.Action("ForgotPassword","vuelos")">password?</a></span>
        </div>
    </div>
}

